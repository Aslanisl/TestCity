<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_shares_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/item_shares_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/item_shares_image"
        android:layout_toRightOf="@id/item_shares_image"/>

    <TextView
        android:id="@+id/item_shares_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_shares_title"
        android:layout_toEndOf="@id/item_shares_image"
        android:layout_toRightOf="@id/item_shares_image"/>

</RelativeLayout>